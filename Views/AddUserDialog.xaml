<Window x:Class="UserManagementApp.Views.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tambah User Baru" Height="250" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nama Lengkap:" Grid.Row="0"/>
        <TextBox x:Name="UsernameBox" Grid.Row="0" Margin="100,0,0,0" Width="150"/>

        <TextBlock Text="Role:" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox x:Name="RoleBox" Grid.Row="1" Margin="100,10,0,0" Width="150"/>

        <Button Content="Simpan" Grid.Row="2" Margin="0,20,0,0" HorizontalAlignment="Right" Width="80" Click="Save_Click"/>
    </Grid>
</Window>